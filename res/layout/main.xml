<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res/com.kudzu.android.redwall.pro"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent">

	<LinearLayout style="@style/TitleBar">

		<ImageView style="@style/TitleBarLogo" android:id="@+id/titleBarLogo"
			android:src="@drawable/title_logo" />

		<View style="@style/TitleBarSpring" />

		<ImageView style="@style/TitleBarSeparator" />
		<Spinner style="@style/TitleBarAction" android:id="@+id/spinner_stream"
			android:prompt="@string/stream_prompt" />

		<ImageView style="@style/TitleBarSeparator" />
		<ImageButton style="@style/TitleBarAction" android:id="@+id/btn_title_refresh"
			android:src="@drawable/ic_title_refresh" />
		<ProgressBar style="@style/TitleBarProgressIndicator"
			android:id="@+id/title_refresh_progress" android:visibility="gone" />

	</LinearLayout>


	<ListView android:id="@+id/list" android:layout_height="fill_parent"
		android:layout_width="fill_parent" android:layout_weight="99" />

</LinearLayout>
